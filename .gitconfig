[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = blue
  frag = yellow
  old = normal dim
  new = normal bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
  default = simple
[core]
  editor = vim
  excludesfile = ~/.gitignore
[branch]
  autosetupmerge = always
[pull]
  rebase = false
[log]
  abbrevCommit = true
[format]
  ; pretty = oneline
  ; pretty = format:%C(auto)%h %d %s %Cblue%cn %C(auto)%C(dim)%ar
[commit]
	gpgSign = true
